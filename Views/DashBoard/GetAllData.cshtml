@model IEnumerable<Product>
@{
    Layout = "_DashBoard";
}
<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">All Product</span>
        </div>
    </div>
    <div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <td class="table-light">id</td>
                    <td class="table-light">Name</td>
                    <td class="table-light">Description</td>
                    <td class="table-light">price</td>
                    <td class="table-light">Quantity</td>
                    <td class="table-light">Enable Size</td>
                    <td class="table-light">Company</td>
                    <td class="table-light">operation</td>
                </tr>
            </thead>
            <tbody>
                @foreach ( var item in Model ) {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.Price</td>
                        <td>@item.Quantity</td>
                        <td>@item.EnableSize</td>
                        <td>@item.company.Name</td>
                        <td>
                            <a class="btn btn-success" role="button" asp-action="EditProduct" asp-route-id="@item.Id">
                                <span class="material-symbols-outlined"> Edit </span>
                            </a>
                            <a asp-action="DeleteProduct" asp-route-id="@item.Id" class="btn btn-danger" role="button">
                                <span class="material-symbols-outlined"> Delete </span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>